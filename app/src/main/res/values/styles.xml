<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!--    Home screen style-->
    <style name="cardCount_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/text_style</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="floatButton_style">
        <item name="android:elevation">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="filterText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="filter">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="food">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_food_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="sendBUtton_style">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:backgroundTint">@color/bg_home_ads_color2</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="addressInput_style">
        <item name="android:layout_width">236dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/edittext_style</item>
        <item name="android:drawableStart">@drawable/ic_location</item>
        <item name="android:elevation">4dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="addressText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="adsList_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="categotyList_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/bg_home_color</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="citySelected_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="location_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="locationImage_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="burger_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="pizzaimage_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="userName_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:elevation">22dp</item>
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userPhone_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:elevation">22dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="draw_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="draw_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:gravity">center|start</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //dialog style

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:radius">10dp</item>
        <item name="backgroundTint">#E1DADA</item>
    </style>
    <!--    Home screen style-->

</resources>